<form id='grade_grid'>
  <table class='master fixed-grid fixed-grid-header'>
    <thead><%= grades_header %></thead>
  </table>

  <div style="height: 500px; overflow:auto;">
    <table class='master fixed-grid'>
      <tbody>
        <%= grades_body %>
      </tbody>
    </table>
  </div>
</form>

<span class="paginate" id="assignments_pagination" name="assignments">
  <%= will_paginate @assignments,
    :previous_label => '« Newer',
    :next_label     => 'Older »',
    :separator      => '&nbsp;&nbsp;' %>
</span>

<% javascript_tag do %>
  <%#= render :partial => 'grade_display.js' %>

  // Update the status of each grade
  //$('grade_grid').getInputs().each(grade_status);

  window.processPage('assignments');
<% end %>

