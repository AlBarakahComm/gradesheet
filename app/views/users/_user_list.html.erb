<%- ## Is this a student
student = true if users[1].class.to_s == "Student" 
-%>

<span class="paginate">
<%= will_paginate users %>
</span>

<table id="users" class="master">
  <thead>
    <th>ID</th>
    <%- form_for users.class.to_s, :html => { :method => :get } do -%>
	    <th>Name<%= text_field_tag :search, params[:search], :class => "search" %></th>
	  <%- end -%>
    <th>Email Address</th>
    <th>Campus</th>
    <%- if student -%><th>Class Of</th><%- end -%>
  </thead>
	<tfoot>
    <th>ID</th>
    <th>Name</th>
    <th>Email Address</th>
    <th>Campus</th>
    <%- if student -%><th>Class Of</th><%- end -%>
	</tfoot>

	<tbody>
		<%- for u in users -%>
			<tr class="<%= cycle('odd', 'even') %>" onclick="<%= link_to(u.full_name, u) %>"/>
				<%= link_to_function(u.full_name, u) %>
				<td><%=h u.short_name %></td>
				<td><%= link_to(u.full_name, u) %></td>
				<td><%=h u.email %></td>
				<td><%=h u.site.name %></td>
				<%- if student -%>
					<td><%=h u.class_of %></td>
				<%- end -%>
			</tr>
		<%- end -%>
  </tbody>
</table>

<span class="paginate">
<%= will_paginate users %>
</span>

<%= set_focus_to_id 'search' %>
