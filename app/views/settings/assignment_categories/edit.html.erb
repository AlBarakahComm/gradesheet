<% content_for :left do %>
	<%= render :partial => 'settings/settings_list' %>
<% end %>

<%= error_messages_for :type, :header_message => "Please Try Again!", :message => "We had some problems saving your changes:" %>

<div class='box span-13'>
  <% form_for @type do |f| %>
    <fieldset>
      <legend>Assignment Type</legend>
      
      <%= f.label :name, {}, :class => 'req' %>
		  <%= f.text_field :name, :class => "focus" %>
			
	    <div class="spacer">
		    <%= submit_tag 'Save', :class => 'btn positive' %>
		    <%= link_to 'Cancel', assignment_categories_path(), :class => 'btn standard' %>
	    </div>
    </fieldset>
  <% end %>
</div>
