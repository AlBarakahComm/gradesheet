<% items = [
		{:name => 'Grading Periods', :url => '/settings/terms'},
		{:name => 'Grading Scales', :url => '/settings/scales'},
		{:name => 'School Calendar', :url => '/settings/calendar'}]%>
		
<table>
	<thead>
		<th>Settings</th>
	</thead>
	<tbody>
		<% items.each do |r| %>
			<tr class="<%= cycle('odd', 'even')%>">
				<td><a href='<%= r[:url]%>'><%= r[:name] %></a></td>
			</tr>
		<% end %>
	</tbody>
</table>
