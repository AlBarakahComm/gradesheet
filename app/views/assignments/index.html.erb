
<table class="list">
	<thead>
		<tr><th>Course</th></tr>
	</thead>
	<tbody>
		<% for course in @courses -%>
		<tr class="<%= cycle('odd', 'even') %>" onclick="<%= 
					remote_function(
								:update => 'assignments_list', 
								:url => assignment_url(course), :action => :show, :method => :get,
								:loading => "Element.show('busy')",
								:complete => "Element.hide('busy')") %>" />
			<td><%= course.name %></td>
		</tr>
		<% end -%>
	</tbody>
</table>

<div id="assignments_list">
	<%= render :partial => "assignment_list" %>
</div>

<div class="buttons">
	<%= link_to 'New assignment', new_assignment_path, :class=> "positive" %>
</div>


